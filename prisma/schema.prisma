generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
}

model Course {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  content   String
  avatar    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Instructor {
  id           String   @id @default(cuid())
  name         String
  bio          String
  image        String
  achievements String[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}